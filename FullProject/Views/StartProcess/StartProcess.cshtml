@model StartProcesses
@{
    ViewData["Title"] = "بدء العمليات";
}
<div class="content-wrapper w-100 mx-max">
    <!-- Content -->

    <div class="card pb-5 m-3 me-5">


        <div class=" table-responsive m-5 mb-2  mx-max text-start">
            <table class="table card-table">
                <thead>
                    <tr>


                        <th>
                            بدء العمليات
                          
                        </th>
                    </tr>
                </thead>

            </table>
        </div>

        <div class=" table-responsive m-5 mx-max text-start">
            <table>

                <tbody>


                    <tr>
                        <td class="p-2 px-5">
                            بدء النشاط
                        </td>
                        <td class="p-2 px-5">
                            <ul class="nav nav-pills flex-column flex-sm-row mb-6">


                                <li class="nav-item">

                                    @if (TempData["New"] is not null)
                                    {
                                        <a asp-controller="StartActivity" asp-action="AddTaxpayer" asp-route-Id_SProcess="@Model.Id_SProcess" class="btn btn-primary" style="width:150px"> تعبئة</a>
                                    }
                                    else
                                    {
                                        <button disabled class="btn btn-light" style="width:150px"> تعبئة</button>                                    
                                    }
                                </li>
                                &nbsp;
                                <li class="nav-item">
                                    @if (TempData["New"] is not null)
                                    {
                                        <button disabled class="btn btn-primary" style="width:150px"> تأكيد</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary" style="width:150px"> تأكيد</button>
                                    }
                                </li>
                            </ul>
                        </td>


                    </tr>
                    <tr>
                        <td class="p-2 px-5">
                            تفتيش وتقييم المنشأت
                        </td>
                        <td class="p-2 px-5">
                            <ul class="nav nav-pills flex-column flex-sm-row mb-6">

             

                                <li class="nav-item">

                                    <button disabled class="btn btn-light" style="width:150px"> تعبئة</button>
                                </li>
                                &nbsp;
                                <li class="nav-item">

                                    <button disabled class="btn btn-light" style="width:150px"> تأكيد</button>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td class="p-2 px-5">
                            تفتيش ومعاينة (منتجات المنشأة )وتحريز  العينات
                        </td>
                        <td class="p-2 px-5">
                            <ul class="nav nav-pills flex-column flex-sm-row mb-6">


                                <li class="nav-item">

                                    <button disabled class="btn btn-light"  style="width:150px"> تعبئة</button>
                                </li>
                                &nbsp;
                                <li class="nav-item">

                                    <button disabled class="btn btn-light"  style="width:150px"> تأكيد</button>
                                </li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>